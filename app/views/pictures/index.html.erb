<% flash.each do |key, value| %>
  <div class="alert <%= bootstrap_class_for(key) %>" ><%= value %></div>
<% end %>
<div class="top-image">
  <img class="large">
  <img class="small">
  <div class="top-name"><h2><%= current_user.name %>のページ</h2></div>
</div>
<p id="notice"><%= notice %></p>
<div class="timeline">
  <aside class="side-menu">
  </aside>
  <article class="">
    <%= link_to 'New Picture', new_picture_path %>
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @pictures.each do |picture| %>
          <tr>
            <td><%= picture.user.name %></td>
            <td><%= image_tag picture.image.url%></td>
            <td><%= link_to 'Show', picture %></td>
            <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
            <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </article>
</div>
